<task id="taskId">
    <title>Feeding a monkey</title>
    <shortdesc>Quick introduction to the art and science of monkey feeding</shortdesc>
    <prolog>
        
        <author type="creator">Monkey Isme</author>
        <copyright>
            <copyryear year="2017"/>
            <copyrholder>Monkeys</copyrholder>
        </copyright>
        
    </prolog>
    <taskbody>
        <context>
            <p>Feed monkeys only when they are hungry</p>
        </context>
        <steps>
            <step>
                <cmd>Let the monkey know that food is coming</cmd>
                <substeps>
                    <substep>
                        <cmd>Address the monkey in perfect English. Monkeys do not speak Spanish</cmd>
                    </substep>
                    <substep>
                        <cmd>Announce food <b>only</b> if it's coming soon</cmd>
                    </substep>
                    
                </substeps>
                
            </step>
            <step>
                <cmd>Serve food cold. Monkeys do not like hot food</cmd>
                <info><note conref="introduction.dita#cintro/mean"/>
                    <image href="eating.jpg"/></info>
            </step>
        </steps>
    </taskbody>
</task>
